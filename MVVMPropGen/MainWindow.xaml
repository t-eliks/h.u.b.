<Window x:Class="MVVMPropGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMPropGen"
        mc:Ignorable="d"
        Title="MVVM Property Generator" Height="450" Width="750" WindowStartupLocation="CenterScreen" Icon="icons8-bird-64.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
            <Label Content="Var Name" VerticalAlignment="Center"/>
            <TextBox x:Name="queryBox" VerticalContentAlignment="Center" Width="220" Margin="5"/>
            <Label Content="Var Type" VerticalAlignment="Center"/>
            <TextBox x:Name="queryTypeBox" VerticalContentAlignment="Center" Width="80" Margin="5"/>
            <Button Margin="10" Width="70" Content="Generate" Click="Button_Click"/>
        </StackPanel>
        <TextBox AcceptsReturn="True" AcceptsTab="True" Grid.Row="1" x:Name="resultBox"/>
    </Grid>
</Window>
