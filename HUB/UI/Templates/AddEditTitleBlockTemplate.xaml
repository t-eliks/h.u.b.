<UserControl x:Class="HUB.UI.Templates.AddEditTitleBlockTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HUB.UI.Templates"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal">
        <Button Name="Button" Style="{StaticResource ExitButton}">
            <Button.Background>
                <ImageBrush ImageSource="/Icons/arrowleft.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <TextBlock Style="{StaticResource WindowTitle}" />
    </StackPanel>
</UserControl>
